<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsActivity">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="190dp"
        android:background="#3700b3"
        android:fontFamily="sans-serif"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="CONTACT US"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:padding="16dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/baseline_location_on_24"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampus Bina Widya KM. 12,5, Simpang Baru, \n Kec. Tampan, Kota Pekanbaru, Riau 28293"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/baseline_email_24"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mohd.abulkhairi5064@student.unri.ac.id"
            android:clickable="true"
            android:onClick="openWebsite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/baseline_phone_android_24"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="076163266"
            android:clickable="true"
            android:onClick="callPhoneNumber"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/baseline_access_time_filled_24"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textView8"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam Operasional \n Senin s/d Kamis \n 08.00-17.00 \n Jum'at \n 08.00-15.00"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
